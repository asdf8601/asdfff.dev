---
import Search from '../components/Search.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Write the Fucking Manual - A minimalist guide to documentation" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    
    <header role="banner">
      <nav role="navigation" aria-label="Main navigation">
        <a href={base} aria-label="Home">wtfm</a>
        <a href={`${base}/posts/`}>posts</a>
        <a href={`${base}/til/`}>til</a>
        <a href={`${base}/projects/`}>projects</a>
        <a href={`${base}/about/`}>about</a>
        <ThemeToggle />
        <Search />
      </nav>
    </header>

    <main id="main" role="main">
      <slot />
    </main>

    <footer role="contentinfo">
      <p>&copy; {new Date().getFullYear()} Write the Fucking Manual</p>
    </footer>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const navLinks = document.querySelectorAll('nav a:not(:first-child)');
        let isAnimating = false;
        
        navLinks.forEach(link => {
          link.addEventListener('mouseenter', () => {
            if (!isAnimating) {
              link.classList.add('show-hover-cursor');
            }
          });

          link.addEventListener('mouseleave', () => {
            link.classList.remove('show-hover-cursor');
          });

          link.addEventListener('click', (e) => {
            e.preventDefault();
            const href = link.getAttribute('href');
            const text = link.textContent?.trim() || '';
            
            isAnimating = true;
            link.classList.remove('show-hover-cursor');
            link.innerHTML = '<span class="text"></span><span class="cursor">█</span>';
            
            setTimeout(() => {
              let charIndex = 0;
              const charDelay = 100;
              const textSpan = link.querySelector('.text');
              
              const typeInterval = setInterval(() => {
                if (charIndex < text.length) {
                  textSpan!.textContent = text.substring(0, charIndex + 1);
                  charIndex++;
                } else {
                  clearInterval(typeInterval);
                  if (href) {
                    window.location.href = href;
                  }
                }
              }, charDelay);
            }, 200);
          });
        });
      });
    </script>
  </body>
</html>

<style>
  header {
    width: 100%;
    padding: var(--spacing-sm);
    border-bottom: 1px solid var(--color-border);
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
  }

  nav a {
    font-weight: 400;
    font-size: 1rem;
    text-decoration: none;
  }

  nav a:not(:first-child) {
    padding: 0.25rem 0.5rem;
    position: relative;
    color: var(--color-text);
    line-height: 1.4;
  }

  nav a:not(:first-child)::after {
    content: '█';
    margin-left: 0.1rem;
    color: transparent;
    font-size: 1.1em;
    vertical-align: middle;
  }

  nav a:not(:first-child).show-hover-cursor::after {
    color: var(--color-accent);
  }

  nav a:not(:first-child) .cursor {
    color: var(--color-accent);
    animation: blinkCursor 0.5s step-end infinite;
    font-size: 1.1em;
    vertical-align: middle;
  }

  @keyframes blinkCursor {
    0%, 49% {
      opacity: 1;
    }
    50%, 100% {
      opacity: 0;
    }
  }

  nav a:first-child {
    margin-right: auto;
  }

  nav a:first-child::before {
    content: "$ ";
    color: var(--color-accent);
  }

  footer {
    width: 100%;
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-sm);
    text-align: left;
    max-width: var(--max-width);
    margin: 0 auto;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }
</style>
