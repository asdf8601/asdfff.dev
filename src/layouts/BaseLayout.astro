---
import Search from '../components/Search.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Write the Fucking Manual - A minimalist guide to documentation" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    
    <header role="banner">
      <nav role="navigation" aria-label="Main navigation">
        <a href={base} aria-label="Home">wtfm</a>
        <a href={`${base}/posts/`}>posts</a>
        <a href={`${base}/til/`}>til</a>
        <a href={`${base}/projects/`}>projects</a>
        <a href={`${base}/about/`}>about</a>
        <ThemeToggle />
        <Search />
      </nav>
    </header>

    <main id="main" role="main">
      <slot />
    </main>

    <footer role="contentinfo">
      <p>&copy; {new Date().getFullYear()} Write the Fucking Manual</p>
    </footer>
  </body>
</html>

<style>
  header {
    width: 100%;
    padding: var(--spacing-sm);
    border-bottom: 1px solid var(--color-border);
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
  }

  nav a {
    font-weight: 400;
    font-size: 1rem;
    text-decoration: none;
  }

  nav a:not(:first-child) {
    padding: 0.25rem 0.5rem;
    position: relative;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
    clip-path: polygon(
      3px 0,
      100% 0,
      100% calc(100% - 3px),
      calc(100% - 3px) 100%,
      3px 100%,
      0 calc(100% - 3px),
      0 3px
    );
  }

  nav a:not(:first-child)::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background-color: var(--color-border);
    transition: background-color 0.2s ease;
  }

  nav a:not(:first-child)::after {
    content: '';
    position: absolute;
    left: 3px;
    bottom: 0;
    right: 0;
    height: 3px;
    background-color: var(--color-border);
    transition: background-color 0.2s ease;
  }

  nav a:not(:first-child):hover {
    border-color: var(--color-accent);
  }

  nav a:not(:first-child):hover::before,
  nav a:not(:first-child):hover::after {
    background-color: var(--color-accent);
  }

  nav a:first-child {
    margin-right: auto;
  }

  nav a:first-child::before {
    content: "$ ";
    color: var(--color-accent);
  }

  footer {
    width: 100%;
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-sm);
    text-align: left;
    max-width: var(--max-width);
    margin: 0 auto;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }
</style>
